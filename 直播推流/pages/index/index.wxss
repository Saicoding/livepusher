.container {
  display: flex;
  flex-direction: row;
}

.left_box {
  display: flex;
  flex-direction: column;
  width: 65%;
  height: 750rpx;
  margin: 0;
}

.right_box {
  width: 35%;
  height: 750rpx;
  margin: 0rpx;
}

.pusher {
  position: flex;
  top: 0rpx;
}

.control {
  width: 96%;
  margin: 2%;
}

.control-line {
  display: flex;
  flex-direction: row;
}

.btn {
  width: 19%;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 8rpx;
  font-size: 25rpx;
  background: rgb(230, 230, 230);
  margin-left: 1%;
  color: white;
}

.btn1 {
  width: 100%;
  background: #ffc124;
  color: white;
  font-size: 30rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
}

.fair-container {
  border: 1rpx solid rgb(219, 219, 219);
  display: flex;
  flex-direction: row;
  border-radius: 8rpx;
  margin-left: 1%;
}

.fair {
  width: 60rpx;
  height: 60rpx;
  font-size: 30rpx;
  text-align: center;
  background: #ffc124;
  line-height: 60rpx;
}

.btn-right {
  width: 100%;
  height: 70rpx;
  font-size: 30rpx;
  margin-top: 40rpx;
}

.control-slider {
  width: 80%;
}

live-player {
  width: 100%;
  height: 422rpx;
}

.control {
  width: 100%;
  height: 422rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
}

.control-up {
  font-size: 25rpx;
  color: white;
  margin-top: 10rpx;
}

.control-down {
  width: 100%;
  height: 50rpx;
  margin-top: 155rpx;
}

.control-up-text {
  border: 4rpx solid white;
  height: 30rpx;
  line-height: 30rpx;
  width: 80rpx;
  border-radius: 30rpx;
  text-align: center;
  margin-left: 650rpx;
}

.control-button {
  display: float;
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin-left: 25rpx;
}

.fullScreen-control {
  font-size: 28rpx;
  color: white;
  margin-top: 120rpx;
  position: absolute;
  text-align: center;
  line-height: 750rpx;
}

.model, .model-opacity {
  position: absolute;
  width: 70rpx;
  height: 375rpx;
  font-size: 28rpx;
  bottom: 40rpx;
  color: white;
  margin-top: 120rpx;
  border-radius: 70rpx;
  left: 650rpx;
}

.model-opacity {
  background: black;
  opacity: 0.3;
}

.back, .set {
  height: 70rpx;
  width: 70rpx;
  margin-top: 20rpx;
  transform: rotate(90deg);
  opacity: 0.9;
}

.back-img, .set-img {
  width: 40rpx;
  height: 40rpx;
  margin-top: 15rpx;
  margin-left: 15rpx;
}

.set-text,.set-btn,.fair-btn,.fair-btn1{
  position: absolute;
  transform: rotate(90deg);
  font-size: 25rpx;
  color: white;
}

.set-container-model {
  position: absolute;
  height: 600rpx;
  width: 750rpx;
  background: black;
  bottom:0;
  opacity: 0.3;
}

.set-text,.set-btn,.fair-btn,.fair-btn1{
  color: rgb(209, 209, 209);
  height:41rpx;
  letter-spacing: 2rpx; 
  line-height: 41rpx;
  text-align: center;
}

.set-text{
  width:100rpx;
}

.set-btn{
  width:60rpx;
  border-radius: 5rpx;
}

.fair-btn{
  width:41rpx;
  height:41rpx;
}

.fair-btn1{
  width:41rpx;
  height:41rpx;
  border:1px solid #ffc120;
}

.online-opacity,.play-opacity{
  position: absolute;
  background: black;
  opacity: 0.3;
  width:70rpx;
  height:200rpx;
  border-radius: 70rpx;
}

.online-opacity{
  left:650rpx;
}

.online-image{
  position: absolute;
  width:40rpx;
  height:40rpx;
  transform: rotate(90deg);
  left:665rpx;
  top:70rpx;
}

.online-text{
  position: absolute;
  width:140rpx;
  height:40rpx;
  left:615rpx;
  top:170rpx;
  color:white;
  transform: rotate(90deg);
  font-size:25rpx;
  line-height: 40rpx;
}

.play-opacity{
  background: black;
  left:40rpx;
}

.control-img{
  position: absolute;
  width:50rpx;
  height:50rpx;
  left:50rpx;
}

